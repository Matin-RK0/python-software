def factorial(number):
    if number < 0:
        return "فاکتوریل برای اعداد منفی تعریف نشده"
    elif number == 0:
        return 1
    else:
        result = 1
        for i in range(1, number + 1):
            result *= i
        return result

num = 5
result = factorial(num)
print(f"فاکتوریل {num} برابر است با {result}")
